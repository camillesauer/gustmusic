<%= render "components/menu" %>
<!--Carousel Wrapper-->
<div class="img-back"><%= link_to(image_tag("button.png", alt: "Gust - all rights reserved."), root_path) %></div>
<div id="carousel-example-1z" class="carousel slide carousel-fade carousel-bottom" data-ride="carousel">
  <!--Indicators-->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-1z" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-1z" data-slide-to="1"></li>
    <li data-target="#carousel-example-1z" data-slide-to="2"></li>
  </ol>
  <!--/.Indicators-->
  <!--Slides-->
  <div class="carousel-inner" role="listbox">
    <!--First slide-->
    <div class="carousel-item active">
      <img class="d-block w-100" src="https://mdbootstrap.com/img/Photos/Slides/img%20(130).jpg"
        alt="First slide">
    </div>
    <!--/First slide-->
    <!--Second slide-->
    <div class="carousel-item">
      <img class="d-block w-100" src="https://mdbootstrap.com/img/Photos/Slides/img%20(129).jpg"
        alt="Second slide">
    </div>
    <!--/Second slide-->
    <!--Third slide-->
    <div class="carousel-item">
      <img class="d-block w-100" src="https://mdbootstrap.com/img/Photos/Slides/img%20(70).jpg"
        alt="Third slide">
    </div>
    <!--/Third slide-->
  </div>
  <!--/.Slides-->
  <!--Controls-->
  <a class="carousel-control-prev" href="#carousel-example-1z" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel-example-1z" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
  <!--/.Controls-->
</div>
<% if user_signed_in? %>
<div class="ajouter-btn"><%= link_to "Ajouter", new_composition_path %></div>
<% end %>
<!--/.Carousel Wrapper-->
</div>

<div>
<div class="video-mobile video-ipad video-medium video-desktop">
    <% @compositions.each do |composition| %>
    <div class ="card-video">
      <div class ="card-item">
        <% if user_signed_in? %>
        <%= link_to 'Supprimer', composition_path(composition),
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
        <%= link_to "Editer", edit_composition_path(composition.id)%>
        <% end %>
      </div>
      <div class="margin-video" >
      <iframe width="320" height="240"
        src= <%= composition.url %>
        frameborder="0"
        allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen>
      </iframe>
      </div>
    </div>
    <% end %>
  </div>
</div>

<%= render "components/footer" %>
